@model Quizle.Web.Areas.Student.Models.StudentDashboardVm

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-md">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">Active Quizzes</h3>
    </div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    @if (Model.ActiveQuizzes.Count == 0)
    {
        <div class="alert alert-secondary">
            Няма активни тестове в момента.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var q in Model.ActiveQuizzes)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between gap-2">
                                <div>
                                    <div class="text-muted small">@q.GroupName</div>
                                    <h5 class="card-title mb-1">@q.Title</h5>
                                </div>
                                <span class="badge text-bg-success align-self-start">Active</span>
                            </div>

                            <div class="mt-2 small text-muted">
                                Duration: <strong>@q.DurationMinutes min</strong>
                            </div>

                            <div class="mt-1 small">
                                Time left:
                                <strong class="time-left" data-until="@q.ActiveUntilUtc?.ToString("O")">--:--</strong>
                            </div>

                            <hr class="my-3" />

                            @if (q.HasAttempt)
                            {
                                if (q.IsSubmitted)
                                {
                                    <div class="small text-muted mb-2">
                                        Submitted • Score: <strong>@(q.Score ?? 0)</strong> / @(q.MaxScore ?? 0)
                                    </div>

                                    <button class="btn btn-outline-secondary w-100" disabled>
                                        Submitted
                                    </button>
                                }
                                else
                                {
                                    <div class="small text-muted mb-2">
                                        Started at: <strong>@q.StartedAtUtc?.ToString("dd/MM/yyyy HH:mm")</strong>
                                    </div>

                                    <form asp-area="Student" asp-controller="Attempts" asp-action="Start" method="post" class="mt-auto">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="quizId" value="@q.QuizId" />
                                        <button class="btn btn-primary w-100" type="submit">
                                            Resume
                                        </button>
                                    </form>
                                }
                            }
                            else
                            {
                                <form asp-area="Student" asp-controller="Attempts" asp-action="Start" method="post" class="mt-auto">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="quizId" value="@q.QuizId" />
                                    <button class="btn btn-success w-100" type="submit">
                                        Start
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        (function(){
          function pad(n){ return n.toString().padStart(2,'0'); }

          function update(){
            document.querySelectorAll(".time-left").forEach(el => {
              const untilStr = el.getAttribute("data-until");
              if(!untilStr){ el.textContent = "--:--"; return; }
              const until = new Date(untilStr);
              const ms = until.getTime() - Date.now();
              if(ms <= 0){ el.textContent = "00:00"; return; }
              const s = Math.floor(ms/1000);
              const m = Math.floor(s/60);
              const r = s%60;
              el.textContent = `${pad(m)}:${pad(r)}`;
            });
          }

          setInterval(update, 500);
          update();
        })();
    </script>
}
