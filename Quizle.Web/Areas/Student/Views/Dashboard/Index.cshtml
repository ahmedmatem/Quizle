@model StudentDashboardVm

@{
    ViewData["Title"] = "My Active Quizzes";
}

<h3 class="mb-3">My Active Quizzes</h3>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (!Model.ActiveQuizzes.Any())
{
    <div class="alert alert-secondary">No active quizzes right now.</div>
}
else
{
    <div class="row g-3">
        @foreach (var q in Model.ActiveQuizzes)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="fw-semibold">@q.Title</div>
                            <span class="badge text-bg-light">@q.DurationMinutes min</span>
                        </div>

                        <div class="text-muted small mb-2">
                            Group: <strong>@q.GroupName</strong>
                        </div>

                        @if (q.ActiveUntilUtc != null)
                        {
                            <div class="text-muted small mb-3">
                                Active until (UTC): <strong>@q.ActiveUntilUtc.Value.ToString("yyyy-MM-dd HH:mm")</strong>
                            </div>
                        }

                        <div class="mt-auto">
                            @if (q.IsSubmitted)
                            {
                                <div class="alert alert-success py-2 mb-2">
                                    Submitted ✅
                                    @if (q.Score.HasValue && q.MaxScore.HasValue)
                                    {
                                        <div class="small">Score: <strong>@q.Score / @q.MaxScore</strong></div>
                                    }
                                </div>
                            }
                            else
                            {
                                <form method="post" asp-area="Student" asp-controller="Dashboard" asp-action="Start">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="quizId" value="@q.QuizId" />

                                    @if (q.HasAttempt)
                                    {
                                        <button class="btn btn-primary w-100" type="submit">Resume</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success w-100" type="submit">Start</button>
                                    }
                                </form>

                                @if (q.HasAttempt && q.StartedAtUtc != null)
                                {
                                    <div class="text-muted small mt-2">
                                        Started (UTC): @q.StartedAtUtc.Value.ToString("yyyy-MM-dd HH:mm")
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}