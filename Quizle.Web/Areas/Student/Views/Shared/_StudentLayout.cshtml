<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quizle (Student)</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quizle.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="Student" asp-controller="Dashboard" asp-action="Index">Quizle</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#studentNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="studentNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Student" asp-controller="Dashboard" asp-action="Index">
                                My Active Quizzes
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                                @User.Identity?.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
                            </form>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main class="container py-3">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
