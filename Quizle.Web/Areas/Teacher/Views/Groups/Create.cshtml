@model CreateGroupVm
@{
    ViewData["Title"] = "Create Group";
}

<h3>Create Group</h3>
<form method="post" asp-area="Teacher" asp-controller="Groups" asp-action="Create" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <a class="btn btn-secondary" asp-area="Teacher" asp-controller="Groups" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
