@model List<QuizListItemVm>
@{
    ViewData["Title"] = "Quizzes";
    var groupId = (string)ViewBag.GroupId;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Quizzes</h3>
    <a class="btn btn-primary" asp-area="Teacher" asp-controller="Quizzes" asp-action="Create" asp-route-groupId="@groupId">Create Quiz</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-secondary">No quizzes yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th class="text-center">Duration</th>
                    <th class="text-center">Questions</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var q in Model)
                {
                    <tr>
                        <td class="fw-semibold">@q.Title</td>
                        <td>@q.Status</td>
                        <td class="text-center">@q.DurationMinutes min</td>
                        <td class="text-center">@q.QuestionsCount</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-area="Teacher" asp-controller="Quizzes" asp-action="Edit" asp-route-id="@q.Id">
                                Builder
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
