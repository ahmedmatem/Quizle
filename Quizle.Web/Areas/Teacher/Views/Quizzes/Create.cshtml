@model QuizCreateVm
@{
    ViewData["Title"] = "Create Quiz";
}

<h3>Create Quiz</h3>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SchoolGroupId" />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Duration (minutes)</label>
        <input class="form-control" type="number" asp-for="DurationMinutes" min="1" max="180" />
        <span class="text-danger" asp-validation-for="DurationMinutes"></span>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <a class="btn btn-secondary"
       asp-area="Teacher" asp-controller="Quizzes" asp-action="Index"
       asp-route-groupId="@Model.SchoolGroupId">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
